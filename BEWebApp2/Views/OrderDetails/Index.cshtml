@model IEnumerable<BEWebApp2.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết đơn hàng</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên SP
        </th>
        <th>
            Tên NCC
        </th>
        <th>
            Màu sắc
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Thành tiền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProDetail.Product.ProName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProDetail.Supplier.SupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProDetail.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProDetail.Price)
        </td>
        <td>
            @{ 
                var totalvalue = item.ProDetail.Price* item.Quantity;
            }  
            @Html.DisplayFor(modelItem => totalvalue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OrderDetailID }) |
            @Html.ActionLink("Details", "Details", new { id = item.OrderDetailID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.OrderDetailID })
        </td>
    </tr>
}

</table>
